#!/bin/sh

set -e

# Cleanup old files
rm -rf ./build/initramfs/lib/modules ./build/initramfs.cpio

# Build kernel and modules
./scripts/build-env ./scripts/build-kernel

# Build the module
# ./scripts/build-env ./scripts/build-module

# Regenerate the initramfs
./scripts/build-env ./scripts/gen-initramfs

# Run the kernel
./scripts/run-kernel
